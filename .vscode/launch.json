{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: barr-e-brain",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/knitware-bots/barr-e/brain/build/barr-e-brain-ubuntu-x64-debug/knitware-bots/barr-e/brain/barr-e-brain",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/knitware-bots/barr-e/brain/build/barr-e-brain-ubuntu-x64-debug"
                },
                {
                    "name": "ROBOTICK_ENABLE_BACKTRACE",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/workspace": "${workspaceFolder}"
            }
        }
    ]
}